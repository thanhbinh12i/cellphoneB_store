@model IEnumerable<CategoryModel>
@{
    ViewData["title"] = "List Category";

    Paginate pager = new Paginate();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;

        pageNo = pager.CurrentPage;
    }

}
<h3>List Products</h3>
<a asp-action="Create" asp-controller="Category">Add New Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>@item.Status</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }


    </tbody>
</table>
<partial name="_paging" model="@pager" />
