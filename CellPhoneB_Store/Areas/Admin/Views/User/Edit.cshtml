@model AppUserModel
@{
    ViewData["title"] = "Edit User";
}
<h4>Edit User</h4>
<form asp-action="Edit" enctype="multipart/form-data">
    <input  type="hidden" asp-for="Id"/>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="UserName" class="form-label">User Name</label>
        <input asp-for="UserName" class="form-control" id="UserName">
        <span asp-validation-for="UserName" class="text-danger" />
    </div>
    <div class="form-group">
        <label for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" id="Email">
        <span asp-validation-for="Email" class="text-danger" />
    </div>
    <div class="form-group">
        <label for="PhoneNumber" class="form-label">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger" />
    </div>
    <div class="form-group">
        <label for="PasswordHash" class="form-label">PasswordHash</label>
        <input asp-for="PasswordHash" class="form-control" id="PasswordHash" readonly>
        <span asp-validation-for="PasswordHash" class="text-danger" />
    </div>


    <div class="form-group">
        <label for="Roles" class="form-label">Roles</label>
        <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
            
        </select>
        <span asp-validation-for="RoleId" class="text-danger" />
    </div>


    <div class="form-group">
        <button class="btn btn-primary">Update</button>
    </div>
</form>
<a asp-action="Index">Back to List User</a>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}